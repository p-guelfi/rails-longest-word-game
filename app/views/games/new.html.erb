<div class="container mt-4">
  <h1 class="mb-4">New Game</h1>

  <div class="letter-grid mb-4">
    <% @letters.each do |letter| %>
      <div class="letter-box d-inline-flex">
        <%= letter %>
      </div>
    <% end %>
  </div>

  <form action="/score" method="post" data-turbo="false" class="d-flex flex-column">
    <div>
      <label for="word" class="form-label">What is the longest word you can find?</label>
    </div>
    <div class="d-flex align-items-center">
      <input type="text" id="word" name="word" class="form-control rounded-start-0" placeholder="Enter your word">
      <input type="submit" value="Play" class="btn btn-primary rounded-end-0 ms-2">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>

  </form>
</div>
